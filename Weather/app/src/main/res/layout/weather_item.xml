<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="4dp"


    app:cardElevation="6dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#804167">

        <TextView
            android:id="@+id/idtvtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="zaman"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/idtvtemparature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idtvtime"

            android:gravity="center"
            android:text="20"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/condiiton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/idtvtemparature"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="4dp"

            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/windspeedd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/condiiton"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="20"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>